function exitstatus {

    EXITSTATUS="$?"
    BOLD="\[\033[1m\]"
    RED="\[\033[0;31m\]"
    GREEN="\[\e[0;32m\]"
    BLUE="\[\e[34m\]"
    BROWN="\[\033[0;33m\]"
    OFF="\[\033[m\]"

    HOST="\h"
    USER="\u"
    DIR="\w"
    NEWLINE="\n"
    DATE="\d"
    TIME="\t"

    PROMPT_COLOR=$BROWN
    STATUS_COLOR=$GREEN

    if [ "${EXITSTATUS}" -ne 0 ]
    then
        STATUS_COLOR=$RED
    fi

    PROMPT="${PROMPT_COLOR}${TIME} ${DATE} [${BLUE}${USER}${PROMPT_COLOR}@${STATUS_COLOR}${HOST}${PROMPT_COLOR}:${BLUE}\w${PROMPT_COLOR}]"
    PS1="${PROMPT} [${STATUS_COLOR}${EXITSTATUS}${PROMPT_COLOR}]${OFF}\n$ "
    PS2="${BOLD}>${OFF} "

}

PROMPT_COMMAND=exitstatus
